<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="32dp">

            <!-- ===== HEADER ===== -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FixIt"
                android:textStyle="bold"
                android:textSize="32sp"
                android:gravity="center"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/tvTagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple solutions for everyday tech problems"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="16dp"/>

            <!-- Search bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#9CA3AF"
                        android:contentDescription="Search"/>

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Search for guides..."
                        android:textSize="14sp"
                        android:padding="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Primary button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWizard"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Start Troubleshooting Wizard"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconPadding="10dp"
                app:iconTint="#FFFFFF"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"/>

            <!-- Secondary button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReport"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Report an Issue"
                android:textAllCaps="false"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_dialog_alert"
                app:iconPadding="10dp"
                app:iconTint="#111827"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:backgroundTint="#FFFFFF"
                android:textColor="#111827"
                android:layout_marginBottom="18dp"/>

            <!-- ===== END HEADER ===== -->


            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse Categories"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:layout_marginTop="20dp"/>

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardKitchen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/cup_hot"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvKitchenTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kitchen Appliances"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvKitchenSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Troubleshoot refrigerators, microwaves, ovens, and more"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardElectronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/tv"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvElectronicsTitle"
                            android:text="Electronics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvElectronicsSub"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fix TVs, audio systems, and entertainment devices"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCameras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/camera"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvCameraTitle"
                            android:text="Cameras  Optics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvCameraSub"
                            android:text="Repair cameras, lenses, and optical equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardComputers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/laptop"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvComputerTitle"
                            android:text="Computers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvComputerSub"
                            android:text="Solve desktop and laptop issues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/phone"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvMobileTitle"
                            android:text="Mobile Devices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvMobileSub"
                            android:text="Fix phones, tablets, and accessories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- icon box -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#EEF4FF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/fan"
                            app:tint="#3B82F6" />

                    </FrameLayout>

                    <!-- text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvHomeTitle"
                            android:text="Home Appliances"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvHomeSub"
                            android:text="Repair washing machines, AC units, and more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <!-- arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/chevron_right"
                        app:tint="#A9A9A9" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 FixIt. Simple solutions for everyday problems."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>