<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp">

    <View
        android:id="@+id/viewTimeline"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/border_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvStepNumber"
        app:layout_constraintEnd_toEndOf="@+id/tvStepNumber"/>

    <TextView
        android:id="@+id/tvStepNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_circle_blue"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingBottom="40dp"
        app:layout_constraintStart_toEndOf="@id/tvStepNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStepNumber">

        <TextView
            android:id="@+id/tvStepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step Title"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"/>

        <TextView
            android:id="@+id/tvStepDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:text="Step description goes here..."
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:lineSpacingMultiplier="1.3"/>

        <LinearLayout
            android:id="@+id/layoutTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_tip_yellow"
            android:padding="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:gravity="top">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info_circle"
                app:tint="#D97706"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvStepTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip text..."
                android:textColor="#92400E"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>